<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:padding="15dp"
        android:src="@drawable/ic_item_rando" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/hike_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:textColor="@color/green_item"
                android:textSize="20sp" />

            <LinearLayout 
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"
   				android:orientation="horizontal"
   				android:layout_alignParentRight="true">
   				
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/hike_proximity"
	                android:textStyle="italic"
	                android:textSize="16sp" />
                
                <TextView
	                android:id="@+id/hike_proximity"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="16sp"
	                android:textStyle="italic" 
	                android:paddingLeft="5dp"/>
                
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/distance_unit_km"
	                android:textStyle="italic"
	                android:textSize="16sp" 
	                android:paddingLeft="5dp"/>
	                
            </LinearLayout>
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="@string/distance"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hike_distance_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/distance_unit_km"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="@string/duration"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hike_duration_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- <LinearLayout -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:orientation="horizontal"> -->


        <!-- <TextView -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:paddingRight="20dp" -->
        <!-- android:text="@string/average_mark" -->
        <!-- android:textSize="15sp" -->
        <!-- android:textStyle="bold"/> -->


        <!-- </LinearLayout> -->
    </LinearLayout>

</LinearLayout>