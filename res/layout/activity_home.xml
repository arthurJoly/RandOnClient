<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.insa.randon.controller.HomeActivity" >

    <Button
        android:id="@+id/button_open_newHike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_hike_title" 
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/button_open_hikeSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hike_search_title" 
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/button_open_myHikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hike_list_title" 
        android:onClick="onButtonClick"/>

</LinearLayout>